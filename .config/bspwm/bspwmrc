#!/bin/sh

slock &
setxkbmap -option ctrl:swapcaps
setxkbmap -option altwin:swap_alt_win
xset s off -dpms

sxhkd &
picom -b

wmname LG3D

xfce4-screensaver &
~/.fehbg &

killall -q polybar barrier barrierc cbatticon pasystray
MONITOR=eDP polybar m-bar-laptop &
MONITOR=DisplayPort-2 polybar m-bar &
cbatticon &
pasystray &
keepassxc &

bspc monitor eDP -d I II III IV V
bspc monitor DisplayPort-2 -d I II III IV

bspc config border_width   2
bspc config window_gap     14
bspc config top_padding    -14

bspc config split_ratio         0.52
bspc config borderless_monocle  false
bspc config gapless_monocle     false

bspc config focused_border_color  '#92971a'

bspc rule -a 'firefox:*:Picture-in-Picture' state=floating sticky=on
# bspc rule -a Gimp desktop='^8' state=floating follow=on
# bspc rule -a Chromium desktop='^2'
# bspc rule -a mplayer2 state=floating
# bspc rule -a Kupfer.py focus=on
# bspc rule -a Screenkey manage=off
